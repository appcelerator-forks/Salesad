<Alloy>
	<Window title="SalesXpress" backButtonTitle="" id="win" navTintColor="#ED1C24">
		<LeftNavButton>
	        <View id="btnBack" left="0"  width="30" height="45">
	         	<Button left='0' width="30" height="30" image="/images/btn-back.png" />
	        </View>
        </LeftNavButton>
        <View class="wfill hfill vert">
	        <View layout="horizontal" height="50" width="100%" platform="android" backgroundColor="#FFF">
				<View left="0" width="15%">
			         	<ImageView left='10' id="btnBack" width="30" height="30" image="/images/btn-back.png" />
			    </View>
		     	<View id="pageTitle" width="70%">
		     		<Label color="#ED1C24" id="title"></Label>
		     	</View>
		 	</View>
		 	<View bottom='0' class="hr"></View>
		 	<ScrollView id="inner_box" bottom="110" class="wfill hfill conthsize contwfill vert">
		 		<View class="wfill hsize padding vert" bottom="0">
		 			<ImageView id="img" class="wfill hsize"></ImageView>
		 			<View class="wfill hsize vert small-padding">
		 				<View class="wfill hsize horz">
		 					<ImageView class="hsize" width="20" right="10" image="/images/Icon_Date.png"></ImageView>
		 					<Label class="wfill hsize h5 grey" id="xpress_date" textAlign="left"/>
		 				</View>
		 				<View class="wfill hsize horz" onClick="getDirection">
		 					<ImageView class="hsize" width="20" top="5" right="10" image="/images/Icon_Location.png"></ImageView>
		 					<Label class="wfill hsize h5 grey" id="xpress_location" top="5" textAlign="left"/>
		 				</View>
	 				</View>
	 			</View>
	 			<View class="hr" backgroundColor="#E8E8E8"></View>
	 			<Label class="wfill hsize h5 padding" id="desc"></Label>
		 	</ScrollView>
	 	</View>
	 	<View class="wfill vert" height="60" backgroundColor="#ffffff" bottom="0" zIndex="10">
	 		<View class="hr" backgroundColor="#E8E8E8"></View>
	 		<View class="wfill hfill horz padding">
	 			<ImageView id="owner_img_path" width="40" height="40" right="10" defaultImage="/images/logo_small.png" class="" />
	 			<View class="hfill vert" width="40%">
	 				<Label id="owner_name" class="bold h5 hsize wfill" ellipsize="true" wordWrap="false" ></Label>
	 				<Label id="category" class="h5 hsize wfill" ellipsize="true" wordWrap="false"></Label>
 				</View>
 				<View class="wfill hsize">
 					<ImageView onClick="popMoreMenu" id="more" class="wsize hsize" top="10" bottom="10" right="0" image="/images/Icon_More_Grey.png" />
				</View>
	 		</View>
	 	</View>
	</Window>
</Alloy>