<Alloy>
	<Window id="win" title="Voucher Detail" navTintColor="#ED1C24" backgroundColor="#fff">
		<LeftNavButton>
	        <View id="btnBack" left="0"  width="30" height="45">
	         	<Button left='0'  width="30" height="30" image="/images/btn-back.png" />
	        </View>
        </LeftNavButton>
        <View class="wfill hfill vert">
	        <View layout="horizontal" height="50" width="100%" platform="android" backgroundColor="#FFF">
				<View left="0" width="15%">
			         	<ImageView left='10' id="btnBack" width="30" height="30" image="/images/btn-back.png" />
			    </View>
		     	<View id="pageTitle" width="70%">
		     		<Label color="#ED1C24">Voucher Detail</Label>
		     	</View>
		 	</View>
		 	<View bottom='0' class="hr"></View>
		 	<ScrollView class="wfill hfill vert" scrollType="vertical" contentWidth="Ti.UI.FILL">
		 		<ImageView class="wfill hsize" id="image_voucher" image="/images/ComingSoon_3.png"></ImageView>
		 		<Label class="wfill hsize h5 padding bold" id="title" text="Voucher Title"></Label>
		 		<View class="wfill hsize horz">
		 			<Label class="wsize hsize h5 padding1" id="leftV" text="0"></Label>
		 			<Label class="wsize hsize h5 padding" top="0" text="vouchers left"></Label>
		 			<ImageView width="15" height="15" top="0" image="/images/Icon_CashPoint_Gold@0,25x.png"></ImageView>
		 			<Label class="wsize hsize h5 padding1" id="point" text="0"></Label>
		 			<Label class="wsize hsize h5 padding" top="0" text="points"></Label>
		 		</View>	
		 		<View class="wfill hsize horz">
		 			<Label class="wsize hsize h5 padding" top="0" text="Valid from"></Label>
		 			<Label class="wsize hsize h5" id="valid_from" top="0" color="#ED1C24"></Label>
		 			<Label class="wsize hsize h5 padding" top="0" text="to"></Label>
		 			<Label class="wsize hsize h5" id="valid_to" top="0" color="#ED1C24"></Label>
		 		</View>
		 		<Label class="wsize hsize h5 padding" top="0" id="desc" text="(Voucher Description)"></Label>
		 		<View class="hr1"></View>
		 		<View class="wfill hsize vert" onClick="htr_extend">
		 			<View class="wfill hsize horz">
		 				<Label class="wsize hsize h5 padding" text="How to redeem"></Label>
		 				<ImageView width="35" height="25" image="/images/btn-forward1.png" id="htr_image"></ImageView>
		 			</View>
		 			<View class="wfill hsize vert" id="htr"></View>
		 		</View>
		 		<View class="hr1"></View>
		 		<View class="wfill hsize vert" onClick="tc_extend" bottom="50">
		 			<View class="wfill hsize horz">
			 			<Label class="wsize hsize h5 padding" text="Term & Condition"></Label>
			 			<ImageView width="35" height="25" image="/images/btn-forward1.png" id="tc_image"></ImageView>
			 		</View>
			 		<View class="wfill hsize vert" id="tc"></View>
		 		</View>
		 	</ScrollView>
		 </View>	
		 <Button class="wfill h4 save_button" height="40" title="Save Voucher" id="save" onClick="doSave"></Button>
	</Window>	
</Alloy>